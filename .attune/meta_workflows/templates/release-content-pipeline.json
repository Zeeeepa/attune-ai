{
  "template_id": "release-content-pipeline",
  "name": "Release & Content Pipeline",
  "description": "Full pipeline for release preparation and technical content creation. Scans code, generates insights, writes release notes, validates quality, and creates blog content.",
  "version": "1.0.0",
  "author": "user",
  "tags": ["release", "content", "documentation", "quality"],
  "collaboration_pattern": "sequential",
  "estimated_cost_range": [0.40, 0.80],
  "estimated_duration_minutes": 15,
  "agents": [
    {
      "id": "code-scanner",
      "role": "Code Scanner",
      "purpose": "Scans codebase for changes since last release, identifies new features, bug fixes, and breaking changes",
      "tier_strategy": "capable_first",
      "base_template": "generic_agent",
      "order": 1,
      "tools": ["read", "grep", "glob"],
      "success_criteria": ["changes_identified", "files_scanned"]
    },
    {
      "id": "insights-reporter",
      "role": "Insights Reporter",
      "purpose": "Analyzes code and generates technical documentation highlighting architectural decisions and design patterns",
      "tier_strategy": "capable_first",
      "base_template": "generic_agent",
      "order": 2,
      "tools": ["read", "grep"],
      "success_criteria": ["insights_generated", "patterns_identified"]
    },
    {
      "id": "release-notes-writer",
      "role": "Release Notes Writer",
      "purpose": "Creates structured changelogs and release announcements from scanner and insights output",
      "tier_strategy": "capable_first",
      "base_template": "generic_agent",
      "order": 3,
      "tools": ["write"],
      "success_criteria": ["changelog_created", "release_notes_written"]
    },
    {
      "id": "quality-checker",
      "role": "Quality Checker",
      "purpose": "Validates generated content for accuracy, completeness, and adherence to project standards",
      "tier_strategy": "premium_only",
      "base_template": "generic_agent",
      "order": 4,
      "tools": ["read"],
      "success_criteria": ["quality_validated", "standards_met"]
    },
    {
      "id": "blog-content-creator",
      "role": "Blog Content Creator",
      "purpose": "Transforms technical insights and release notes into engaging blog posts for developers",
      "tier_strategy": "premium_only",
      "base_template": "generic_agent",
      "order": 5,
      "tools": ["write"],
      "success_criteria": ["blog_post_created", "audience_appropriate"]
    }
  ],
  "form_schema": {
    "title": "Release & Content Pipeline Configuration",
    "description": "Configure the release preparation and content generation pipeline",
    "questions": [
      {
        "id": "release_type",
        "text": "What type of release is this?",
        "type": "single_select",
        "options": ["Major (breaking changes)", "Minor (new features)", "Patch (bug fixes)"],
        "required": true
      },
      {
        "id": "target_audience",
        "text": "Who is the primary audience for the content?",
        "type": "single_select",
        "options": ["Developers", "Architects", "Technical Writers", "All"],
        "default": "Developers",
        "required": true
      },
      {
        "id": "include_blog_post",
        "text": "Generate a blog post about this release?",
        "type": "boolean",
        "default": "Yes",
        "required": true
      },
      {
        "id": "scan_scope",
        "text": "What should be included in the scan?",
        "type": "multi_select",
        "options": ["Source code", "Tests", "Documentation", "Configuration"],
        "required": true
      }
    ]
  },
  "agent_composition_rules": [
    {
      "role": "Code Scanner",
      "base_template": "generic_agent",
      "tier_strategy": "capable_first",
      "tools": ["read", "grep", "glob"],
      "required_responses": {},
      "config_mapping": {"scan_scope": "scope"},
      "success_criteria": ["changes_identified"]
    },
    {
      "role": "Insights Reporter",
      "base_template": "generic_agent",
      "tier_strategy": "capable_first",
      "tools": ["read", "grep"],
      "required_responses": {},
      "config_mapping": {"target_audience": "audience"},
      "success_criteria": ["insights_generated"]
    },
    {
      "role": "Release Notes Writer",
      "base_template": "generic_agent",
      "tier_strategy": "capable_first",
      "tools": ["write"],
      "required_responses": {},
      "config_mapping": {"release_type": "type"},
      "success_criteria": ["changelog_created"]
    },
    {
      "role": "Quality Checker",
      "base_template": "generic_agent",
      "tier_strategy": "premium_only",
      "tools": ["read"],
      "required_responses": {},
      "config_mapping": {},
      "success_criteria": ["quality_validated"]
    },
    {
      "role": "Blog Content Creator",
      "base_template": "generic_agent",
      "tier_strategy": "premium_only",
      "tools": ["write"],
      "required_responses": {"include_blog_post": "Yes"},
      "config_mapping": {"target_audience": "audience"},
      "success_criteria": ["blog_post_created"]
    }
  ]
}

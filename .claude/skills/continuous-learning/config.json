{
  "name": "continuous-learning",
  "description": "Automatic pattern extraction from sessions for learning",
  "version": "1.0.0",
  "author": "Empathy Framework Team",
  "triggers": {
    "hooks": ["SessionEnd"],
    "commands": ["/learn", "/patterns"],
    "automatic": true
  },
  "categories": [
    "user_correction",
    "error_resolution",
    "workaround",
    "preference",
    "project_specific",
    "debugging_technique",
    "code_pattern"
  ],
  "evaluation": {
    "min_interactions": 3,
    "min_score_for_extraction": 0.4,
    "quality_thresholds": {
      "excellent": 0.7,
      "good": 0.5,
      "average": 0.3,
      "poor": 0.1
    }
  },
  "extraction": {
    "max_patterns_per_session": 10,
    "min_confidence": 0.3,
    "correction_starters": [
      "actually",
      "no,",
      "i meant",
      "let me clarify",
      "to be clear"
    ]
  },
  "storage": {
    "max_patterns_per_user": 100,
    "max_skills_per_user": 50,
    "storage_dir": ".empathy/learned_skills"
  },
  "integrations": {
    "evaluator": "empathy_llm_toolkit.learning.SessionEvaluator",
    "extractor": "empathy_llm_toolkit.learning.PatternExtractor",
    "storage": "empathy_llm_toolkit.learning.LearnedSkillsStorage",
    "hook": "empathy_llm_toolkit.hooks.scripts.evaluate_session.run_evaluate_session"
  },
  "attribution": {
    "inspired_by": "everything-claude-code",
    "author": "Affaan Mustafa (@affaan-m)",
    "license": "MIT",
    "url": "https://github.com/affaan-m/everything-claude-code"
  }
}

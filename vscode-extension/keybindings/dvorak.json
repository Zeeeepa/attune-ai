{
  "description": "Dvorak-optimized keybindings for Empathy Framework",
  "instructions": "Copy these keybindings to your VSCode keybindings.json (Cmd+Shift+P â†’ 'Preferences: Open Keyboard Shortcuts (JSON)')",
  "layout": "dvorak",
  "philosophy": "Optimized for left-hand home row (A-O-E-U) and comfortable reaches",
  "keybindings": [
    {
      "key": "ctrl+shift+e a",
      "mac": "cmd+shift+e a",
      "command": "empathy.morning",
      "note": "A = AM/Morning (home row pinky)"
    },
    {
      "key": "ctrl+shift+e o",
      "mac": "cmd+shift+e o",
      "command": "empathy.ship",
      "note": "O = Out/Ship (home row ring)"
    },
    {
      "key": "ctrl+shift+e e",
      "mac": "cmd+shift+e e",
      "command": "empathy.fixAll",
      "note": "E = Edit/Fix (home row middle)"
    },
    {
      "key": "ctrl+shift+e u",
      "mac": "cmd+shift+e u",
      "command": "empathy.dashboard",
      "note": "U = UI/Dashboard (home row index)"
    },
    {
      "key": "ctrl+shift+e i",
      "mac": "cmd+shift+e i",
      "command": "empathy.runWorkflowQuick",
      "note": "I = Invoke workflow (right of U)"
    },
    {
      "key": "ctrl+shift+e ,",
      "mac": "cmd+shift+e ,",
      "command": "empathy.costs",
      "note": ", = Comma/Costs (top row)"
    },
    {
      "key": "ctrl+shift+e .",
      "mac": "cmd+shift+e .",
      "command": "empathy.openPowerPanel",
      "note": ". = Power Panel (top row)"
    },
    {
      "key": "ctrl+shift+e p",
      "mac": "cmd+shift+e p",
      "command": "empathy.runTests",
      "note": "P = Pytest/Tests (top row)"
    },
    {
      "key": "ctrl+shift+e y",
      "mac": "cmd+shift+e y",
      "command": "empathy.reviewFile",
      "note": "Y = review (top row right)"
    },
    {
      "key": "ctrl+shift+e h",
      "mac": "cmd+shift+e h",
      "command": "empathy.runScan",
      "note": "H = Health (right hand home)"
    },
    {
      "key": "ctrl+shift+e t",
      "mac": "cmd+shift+e t",
      "command": "empathy.securityAudit",
      "note": "T = Threat/Audit (right hand)"
    },
    {
      "key": "ctrl+shift+e n",
      "mac": "cmd+shift+e n",
      "command": "empathy.scanFolder",
      "note": "N = Navigate/Bugs (right hand)"
    },
    {
      "key": "ctrl+shift+e s",
      "mac": "cmd+shift+e s",
      "command": "empathy.generateTests",
      "note": "S = Specs/Generate (right hand)"
    },
    {
      "key": "ctrl+shift+e l",
      "mac": "cmd+shift+e l",
      "command": "empathy.learn",
      "note": "L = Learn (right hand)"
    },
    {
      "key": "ctrl+shift+e r",
      "mac": "cmd+shift+e r",
      "command": "empathy.status",
      "note": "R = Report/Status (bottom row)"
    },
    {
      "key": "ctrl+shift+e z",
      "mac": "cmd+shift+e z",
      "command": "empathy.recentWorkflows",
      "note": "Z = History (same as QWERTY)"
    }
  ],
  "dvorak_layout_reference": {
    "top_row": "' , . p y f g c r l / = \\",
    "home_row": "a o e u i d h t n s -",
    "bottom_row": "; q j k x b m w v z"
  },
  "mnemonic": "A-O-E-U for daily actions (AM, Out, Edit, UI)"
}

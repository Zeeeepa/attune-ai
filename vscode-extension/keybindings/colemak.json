{
  "description": "Colemak-optimized keybindings for Empathy Framework",
  "instructions": "Copy these keybindings to your VSCode keybindings.json (Cmd+Shift+P â†’ 'Preferences: Open Keyboard Shortcuts (JSON)')",
  "layout": "colemak",
  "philosophy": "Optimized for left-hand home row (A-R-S-T) and comfortable reaches",
  "keybindings": [
    {
      "key": "ctrl+shift+e a",
      "mac": "cmd+shift+e a",
      "command": "empathy.morning",
      "note": "A = AM/Morning (home row pinky)"
    },
    {
      "key": "ctrl+shift+e r",
      "mac": "cmd+shift+e r",
      "command": "empathy.ship",
      "note": "R = Release/Ship (home row ring)"
    },
    {
      "key": "ctrl+shift+e s",
      "mac": "cmd+shift+e s",
      "command": "empathy.fixAll",
      "note": "S = Solve/Fix (home row middle)"
    },
    {
      "key": "ctrl+shift+e t",
      "mac": "cmd+shift+e t",
      "command": "empathy.dashboard",
      "note": "T = Tab/Dashboard (home row index)"
    },
    {
      "key": "ctrl+shift+e g",
      "mac": "cmd+shift+e g",
      "command": "empathy.runWorkflowQuick",
      "note": "G = Go workflow (right of T)"
    },
    {
      "key": "ctrl+shift+e q",
      "mac": "cmd+shift+e q",
      "command": "empathy.costs",
      "note": "Q = Query costs (top row)"
    },
    {
      "key": "ctrl+shift+e w",
      "mac": "cmd+shift+e w",
      "command": "empathy.openPowerPanel",
      "note": "W = Watt/Power Panel (top row)"
    },
    {
      "key": "ctrl+shift+e f",
      "mac": "cmd+shift+e f",
      "command": "empathy.runTests",
      "note": "F = Fast tests (top row)"
    },
    {
      "key": "ctrl+shift+e p",
      "mac": "cmd+shift+e p",
      "command": "empathy.reviewFile",
      "note": "P = Peer review (top row)"
    },
    {
      "key": "ctrl+shift+e h",
      "mac": "cmd+shift+e h",
      "command": "empathy.runScan",
      "note": "H = Health (right hand)"
    },
    {
      "key": "ctrl+shift+e n",
      "mac": "cmd+shift+e n",
      "command": "empathy.securityAudit",
      "note": "N = Network/Security (right hand)"
    },
    {
      "key": "ctrl+shift+e e",
      "mac": "cmd+shift+e e",
      "command": "empathy.scanFolder",
      "note": "E = Examine/Bugs (right hand)"
    },
    {
      "key": "ctrl+shift+e i",
      "mac": "cmd+shift+e i",
      "command": "empathy.generateTests",
      "note": "I = Integration tests (right hand)"
    },
    {
      "key": "ctrl+shift+e l",
      "mac": "cmd+shift+e l",
      "command": "empathy.learn",
      "note": "L = Learn (right hand)"
    },
    {
      "key": "ctrl+shift+e o",
      "mac": "cmd+shift+e o",
      "command": "empathy.status",
      "note": "O = Overview/Status (right hand)"
    },
    {
      "key": "ctrl+shift+e z",
      "mac": "cmd+shift+e z",
      "command": "empathy.recentWorkflows",
      "note": "Z = History (same position)"
    }
  ],
  "colemak_layout_reference": {
    "top_row": "q w f p g j l u y ; [ ] \\",
    "home_row": "a r s t d h n e i o '",
    "bottom_row": "z x c v b k m , . /"
  },
  "mnemonic": "A-R-S-T for daily actions (AM, Release, Solve, Tab)"
}

{
  "name": "empathy-framework",
  "displayName": "Empathy Framework",
  "description": "AI-powered code health, pattern learning, and cost optimization for VS Code. Learn bug patterns from git history, track API costs, sync to Claude Code.",
  "version": "1.3.1",
  "publisher": "smart-ai-memory",
  "license": "SEE LICENSE IN LICENSE",
  "icon": "images/icon.png",
  "homepage": "https://www.smartaimemory.com",
  "bugs": {
    "url": "https://github.com/Smart-AI-Memory/empathy-framework/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Smart-AI-Memory/empathy-framework"
  },
  "galleryBanner": {
    "color": "#6366f1",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "empathy",
    "ai",
    "patterns",
    "health",
    "cost-optimization"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "empathy.morning",
        "title": "Empathy: Morning Briefing",
        "icon": "$(calendar)"
      },
      {
        "command": "empathy.ship",
        "title": "Empathy: Pre-Ship Check",
        "icon": "$(rocket)"
      },
      {
        "command": "empathy.fixAll",
        "title": "Empathy: Fix All Issues",
        "icon": "$(tools)"
      },
      {
        "command": "empathy.learn",
        "title": "Empathy: Learn Patterns",
        "icon": "$(mortar-board)"
      },
      {
        "command": "empathy.costs",
        "title": "Empathy: View API Costs",
        "icon": "$(graph)"
      },
      {
        "command": "empathy.dashboard",
        "title": "Empathy: Open Dashboard",
        "icon": "$(dashboard)"
      },
      {
        "command": "empathy.focusSidebarDashboard",
        "title": "Empathy: Focus on Dashboard View",
        "icon": "$(dashboard)"
      },
      {
        "command": "empathy.syncClaude",
        "title": "Empathy: Sync to Claude Code",
        "icon": "$(sync)"
      },
      {
        "command": "empathy.status",
        "title": "Empathy: Show Status",
        "icon": "$(info)"
      },
      {
        "command": "empathy.refreshHealth",
        "title": "Empathy: Refresh Health",
        "icon": "$(refresh)"
      },
      {
        "command": "empathy.runScan",
        "title": "Empathy: Run Health Scan",
        "icon": "$(search)"
      },
      {
        "command": "empathy.runSecurityScan",
        "title": "Empathy: Run Security Scan",
        "icon": "$(shield)"
      },
      {
        "command": "empathy.fixLint",
        "title": "Empathy: Fix Lint Issues",
        "icon": "$(lightbulb)"
      },
      {
        "command": "empathy.fixFormat",
        "title": "Empathy: Fix Format Issues",
        "icon": "$(edit)"
      },
      {
        "command": "empathy.runTests",
        "title": "Empathy: Run Tests",
        "icon": "$(beaker)"
      },
      {
        "command": "empathy.viewDetails",
        "title": "View Details",
        "icon": "$(info)"
      },
      {
        "command": "empathy.openFile",
        "title": "Open File",
        "icon": "$(go-to-file)"
      },
      {
        "command": "empathy.ignoreIssue",
        "title": "Ignore Issue",
        "icon": "$(eye-closed)"
      },
      {
        "command": "empathy.openPowerPanel",
        "title": "Empathy: Power Panel",
        "icon": "$(zap)"
      },
      {
        "command": "empathy.openHealthPanel",
        "title": "Empathy: Health Metrics",
        "icon": "$(heart)"
      },
      {
        "command": "empathy.openCoveragePanel",
        "title": "Empathy: Test Coverage Boost",
        "icon": "$(target)"
      },
      {
        "command": "empathy.openCostsPanel",
        "title": "Empathy: Cost Metrics",
        "icon": "$(graph)"
      },
      {
        "command": "empathy.openWorkflowHistory",
        "title": "Empathy: Workflow History",
        "icon": "$(history)"
      },
      {
        "command": "empathy.openDocAnalysis",
        "title": "Empathy: Analyze Documentation",
        "icon": "$(book)"
      },
      {
        "command": "empathy.runWorkflowQuick",
        "title": "Empathy: Run Workflow",
        "icon": "$(play)"
      },
      {
        "command": "empathy.memory.showPanel",
        "title": "Empathy: Memory Panel (Beta)",
        "icon": "$(database)"
      },
      {
        "command": "empathy.memory.refreshStatus",
        "title": "Empathy: Refresh Memory Status (Beta)",
        "icon": "$(refresh)"
      },
      {
        "command": "empathy.initializeProject",
        "title": "Empathy: Initialize Project",
        "icon": "$(rocket)"
      },
      {
        "command": "empathy.workflowWizard.show",
        "title": "Empathy: Workflow Wizard",
        "icon": "$(symbol-function)"
      },
      {
        "command": "empathy.wizard.create",
        "title": "Empathy: Create Wizard (12x faster)",
        "icon": "$(wand)"
      },
      {
        "command": "empathy.wizard.listPatterns",
        "title": "Empathy: List Wizard Patterns",
        "icon": "$(list-tree)"
      },
      {
        "command": "empathy.wizard.generateTests",
        "title": "Empathy: Generate Wizard Tests",
        "icon": "$(beaker)"
      },
      {
        "command": "empathy.wizard.analyze",
        "title": "Empathy: Analyze Wizard Risk",
        "icon": "$(graph-line)"
      },
      {
        "command": "empathy.workflow.create",
        "title": "Empathy: Create Workflow (12x faster)",
        "icon": "$(output)"
      },
      {
        "command": "empathy.workflow.listPatterns",
        "title": "Empathy: List Workflow Patterns",
        "icon": "$(list-tree)"
      },
      {
        "command": "empathy.workflow.recommend",
        "title": "Empathy: Recommend Workflow Patterns",
        "icon": "$(lightbulb)"
      },
      {
        "command": "empathy.metaWorkflow.listTemplates",
        "title": "Empathy: List Meta-Workflow Templates",
        "icon": "$(list-tree)"
      },
      {
        "command": "empathy.metaWorkflow.inspect",
        "title": "Empathy: Inspect Meta-Workflow Template",
        "icon": "$(search)"
      },
      {
        "command": "empathy.metaWorkflow.run",
        "title": "Empathy: Run Meta-Workflow",
        "icon": "$(play-circle)"
      },
      {
        "command": "empathy.metaWorkflow.analytics",
        "title": "Empathy: Meta-Workflow Analytics",
        "icon": "$(graph)"
      },
      {
        "command": "empathy.metaWorkflow.listRuns",
        "title": "Empathy: Meta-Workflow History",
        "icon": "$(history)"
      },
      {
        "command": "empathy.metaWorkflow.sessionStats",
        "title": "Empathy: Meta-Workflow Session Stats",
        "icon": "$(dashboard)"
      }
    ],
    "keybindings": [
      {"command": "empathy.openPowerPanel", "key": "ctrl+shift+e p", "mac": "cmd+shift+e p"},
      {"command": "empathy.openHealthPanel", "key": "ctrl+shift+e 1", "mac": "cmd+shift+e 1"},
      {"command": "empathy.openCoveragePanel", "key": "ctrl+shift+e 4", "mac": "cmd+shift+e 4"},
      {"command": "empathy.openCostsPanel", "key": "ctrl+shift+e 2", "mac": "cmd+shift+e 2"},
      {"command": "empathy.openWorkflowHistory", "key": "ctrl+shift+e 3", "mac": "cmd+shift+e 3"},
      {"command": "empathy.focusSidebarDashboard", "key": "ctrl+shift+e d", "mac": "cmd+shift+e d"},
      {"command": "empathy.morning", "key": "ctrl+shift+e m", "mac": "cmd+shift+e m"},
      {"command": "empathy.ship", "key": "ctrl+shift+e s", "mac": "cmd+shift+e s"},
      {"command": "empathy.fixAll", "key": "ctrl+shift+e f", "mac": "cmd+shift+e f"},
      {"command": "empathy.learn", "key": "ctrl+shift+e l", "mac": "cmd+shift+e l"},
      {"command": "empathy.costs", "key": "ctrl+shift+e c", "mac": "cmd+shift+e c"},
      {"command": "empathy.runWorkflowQuick", "key": "ctrl+shift+e r", "mac": "cmd+shift+e r"},
      {"command": "empathy.runTests", "key": "ctrl+shift+e t", "mac": "cmd+shift+e t"},
      {"command": "empathy.runScan", "key": "ctrl+shift+e h", "mac": "cmd+shift+e h"},
      {"command": "empathy.syncClaude", "key": "ctrl+shift+e y", "mac": "cmd+shift+e y"},
      {"command": "empathy.initializeProject", "key": "ctrl+shift+e i", "mac": "cmd+shift+e i"},
      {"command": "empathy.viewDetails", "key": "ctrl+shift+e v", "mac": "cmd+shift+e v"},
      {"command": "empathy.refreshHealth", "key": "ctrl+shift+e u", "mac": "cmd+shift+e u"},
      {"command": "empathy.openDocAnalysis", "key": "ctrl+shift+e o", "mac": "cmd+shift+e o"},
      {"command": "empathy.wizard.create", "key": "ctrl+shift+e z", "mac": "cmd+shift+e z"},
      {"command": "empathy.workflow.create", "key": "ctrl+shift+e k", "mac": "cmd+shift+e k"}
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "empathy-explorer",
          "title": "Empathy",
          "icon": "$(pulse)"
        }
      ]
    },
    "views": {
      "empathy-explorer": [
        {
          "type": "webview",
          "id": "empathy-dashboard",
          "name": "Dashboard"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "empathy.morning",
          "when": "true"
        },
        {
          "command": "empathy.ship",
          "when": "true"
        },
        {
          "command": "empathy.runWorkflowQuick",
          "when": "true"
        },
        {
          "command": "empathy.viewDetails",
          "when": "false"
        },
        {
          "command": "empathy.openFile",
          "when": "false"
        },
        {
          "command": "empathy.ignoreIssue",
          "when": "false"
        }
      ],
      "view/title": [],
      "view/item/context": []
    },
    "configuration": {
      "title": "Empathy Framework",
      "properties": {
        "empathy.patternsDir": {
          "type": "string",
          "default": "./patterns",
          "description": "Path to patterns directory"
        },
        "empathy.empathyDir": {
          "type": "string",
          "default": ".empathy",
          "description": "Path to empathy data directory"
        },
        "empathy.pythonPath": {
          "type": "string",
          "default": "python",
          "description": "Path to Python executable"
        },
        "empathy.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show Empathy status in status bar"
        },
        "empathy.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Auto-refresh pattern data"
        },
        "empathy.refreshInterval": {
          "type": "number",
          "default": 300,
          "description": "Refresh interval in seconds"
        },
        "empathy.autoScanOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically run health scan when files are saved"
        },
        "empathy.scanDebounceMs": {
          "type": "number",
          "default": 2000,
          "description": "Debounce time in milliseconds for auto-scan on save"
        },
        "empathy.memory.apiHost": {
          "type": "string",
          "default": "localhost",
          "description": "(Beta) Memory API host for Redis-backed memory"
        },
        "empathy.memory.apiPort": {
          "type": "number",
          "default": 8765,
          "description": "(Beta) Memory API port for Redis-backed memory"
        },
        "empathy.memory.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "(Beta) Auto-refresh memory status every 30 seconds"
        },
        "empathy.memory.autoRefreshInterval": {
          "type": "number",
          "default": 30,
          "minimum": 5,
          "maximum": 300,
          "description": "(Beta) Auto-refresh interval in seconds"
        },
        "empathy.memory.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "(Beta) Show notifications for memory operations"
        },
        "empathy.testGen.maxFilesToScan": {
          "type": "number",
          "default": 1000,
          "minimum": 10,
          "maximum": 10000,
          "description": "Maximum number of files to scan before stopping (prevents timeouts on large projects)"
        },
        "empathy.testGen.maxFileSizeKb": {
          "type": "number",
          "default": 200,
          "minimum": 10,
          "maximum": 1000,
          "description": "Skip files larger than this size in KB"
        },
        "empathy.testGen.maxCandidates": {
          "type": "number",
          "default": 50,
          "minimum": 5,
          "maximum": 500,
          "description": "Maximum number of candidate files to return from scan"
        },
        "empathy.testGen.maxFilesToAnalyze": {
          "type": "number",
          "default": 20,
          "minimum": 1,
          "maximum": 100,
          "description": "Maximum files to analyze for test generation"
        },
        "empathy.testGen.maxFunctionsPerFile": {
          "type": "number",
          "default": 30,
          "minimum": 1,
          "maximum": 100,
          "description": "Maximum functions to extract per file"
        },
        "empathy.testGen.maxClassesPerFile": {
          "type": "number",
          "default": 15,
          "minimum": 1,
          "maximum": 50,
          "description": "Maximum classes to extract per file"
        },
        "empathy.testGen.maxFilesToGenerate": {
          "type": "number",
          "default": 15,
          "minimum": 1,
          "maximum": 50,
          "description": "Maximum files to generate tests for"
        },
        "empathy.testGen.maxFunctionsToGenerate": {
          "type": "number",
          "default": 8,
          "minimum": 1,
          "maximum": 30,
          "description": "Maximum functions per file to generate tests for"
        },
        "empathy.testGen.maxClassesToGenerate": {
          "type": "number",
          "default": 4,
          "minimum": 1,
          "maximum": 20,
          "description": "Maximum classes per file to generate tests for"
        },
        "empathy.testGen.includeAllFiles": {
          "type": "boolean",
          "default": false,
          "description": "Include files with low priority (tested or small files) in scan results"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.55.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.0"
  }
}

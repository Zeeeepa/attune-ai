{
  "name": "empathy-framework",
  "displayName": "Empathy Framework",
  "description": "AI-powered code health, pattern learning, and cost optimization for VS Code. Learn bug patterns from git history, track API costs, sync to Claude Code.",
  "version": "1.4.1",
  "publisher": "smart-ai-memory",
  "license": "SEE LICENSE IN LICENSE",
  "icon": "images/icon.png",
  "homepage": "https://www.smartaimemory.com",
  "bugs": {
    "url": "https://github.com/Smart-AI-Memory/empathy-framework/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Smart-AI-Memory/empathy-framework"
  },
  "galleryBanner": {
    "color": "#6366f1",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "empathy",
    "ai",
    "patterns",
    "health",
    "cost-optimization"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "empathy.hub.agent",
        "title": "Agent",
        "category": "Empathy",
        "icon": "$(hubot)"
      },
      {
        "command": "empathy.hub.context",
        "title": "Context",
        "category": "Empathy",
        "icon": "$(database)"
      },
      {
        "command": "empathy.hub.dev",
        "title": "Dev",
        "category": "Empathy",
        "icon": "$(code)"
      },
      {
        "command": "empathy.hub.docs",
        "title": "Docs",
        "category": "Empathy",
        "icon": "$(book)"
      },
      {
        "command": "empathy.hub.learning",
        "title": "Learning",
        "category": "Empathy",
        "icon": "$(mortar-board)"
      },
      {
        "command": "empathy.hub.release",
        "title": "Release",
        "category": "Empathy",
        "icon": "$(rocket)"
      },
      {
        "command": "empathy.hub.testing",
        "title": "Testing",
        "category": "Empathy",
        "icon": "$(beaker)"
      },
      {
        "command": "empathy.hub.utilities",
        "title": "Utilities",
        "category": "Empathy",
        "icon": "$(tools)"
      },
      {
        "command": "empathy.hub.workflow",
        "title": "Workflow",
        "category": "Empathy",
        "icon": "$(git-merge)"
      },
      {
        "command": "empathy.focusSidebarDashboard",
        "title": "Focus on Dashboard View",
        "category": "Empathy",
        "icon": "$(dashboard)"
      },
      {
        "command": "empathy.refreshHealth",
        "title": "Refresh Health",
        "icon": "$(refresh)"
      },
      {
        "command": "empathy.viewDetails",
        "title": "View Details",
        "icon": "$(info)"
      },
      {
        "command": "empathy.openFile",
        "title": "Open File",
        "icon": "$(go-to-file)"
      },
      {
        "command": "empathy.ignoreIssue",
        "title": "Ignore Issue",
        "icon": "$(eye-closed)"
      },
      {
        "command": "empathy.openHealthPanel",
        "title": "Health Metrics",
        "icon": "$(heart)"
      },
      {
        "command": "empathy.openCoveragePanel",
        "title": "Test Coverage Boost",
        "icon": "$(target)"
      },
      {
        "command": "empathy.openCostsPanel",
        "title": "Cost Metrics",
        "icon": "$(graph)"
      },
      {
        "command": "empathy.openWorkflowHistory",
        "title": "Workflow History",
        "icon": "$(history)"
      },
      {
        "command": "empathy.memory.showPanel",
        "title": "Memory Panel (Beta)",
        "icon": "$(database)"
      },
      {
        "command": "empathy.memory.refreshStatus",
        "title": "Refresh Memory Status (Beta)",
        "icon": "$(refresh)"
      }
    ],
    "keybindings": [
      {"command": "empathy.hub.agent", "key": "ctrl+shift+e a", "mac": "cmd+shift+e a"},
      {"command": "empathy.hub.context", "key": "ctrl+shift+e c", "mac": "cmd+shift+e c"},
      {"command": "empathy.hub.dev", "key": "ctrl+shift+e d", "mac": "cmd+shift+e d"},
      {"command": "empathy.hub.docs", "key": "ctrl+shift+e o", "mac": "cmd+shift+e o"},
      {"command": "empathy.hub.learning", "key": "ctrl+shift+e l", "mac": "cmd+shift+e l"},
      {"command": "empathy.hub.release", "key": "ctrl+shift+e r", "mac": "cmd+shift+e r"},
      {"command": "empathy.hub.testing", "key": "ctrl+shift+e t", "mac": "cmd+shift+e t"},
      {"command": "empathy.hub.utilities", "key": "ctrl+shift+e u", "mac": "cmd+shift+e u"},
      {"command": "empathy.hub.workflow", "key": "ctrl+shift+e w", "mac": "cmd+shift+e w"},
      {"command": "empathy.focusSidebarDashboard", "key": "ctrl+shift+e 1", "mac": "cmd+shift+e 1"}
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "empathy-explorer",
          "title": "Empathy",
          "icon": "$(pulse)"
        }
      ]
    },
    "views": {
      "empathy-explorer": [
        {
          "type": "webview",
          "id": "empathy-dashboard",
          "name": "Dashboard"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        { "command": "empathy.hub.agent", "when": "true" },
        { "command": "empathy.hub.context", "when": "true" },
        { "command": "empathy.hub.dev", "when": "true" },
        { "command": "empathy.hub.docs", "when": "true" },
        { "command": "empathy.hub.learning", "when": "true" },
        { "command": "empathy.hub.release", "when": "true" },
        { "command": "empathy.hub.testing", "when": "true" },
        { "command": "empathy.hub.utilities", "when": "true" },
        { "command": "empathy.hub.workflow", "when": "true" },
        { "command": "empathy.viewDetails", "when": "false" },
        { "command": "empathy.openFile", "when": "false" },
        { "command": "empathy.ignoreIssue", "when": "false" }
      ],
      "view/title": [],
      "view/item/context": []
    },
    "configuration": {
      "title": "Empathy Framework",
      "properties": {
        "empathy.patternsDir": {
          "type": "string",
          "default": "./patterns",
          "description": "Path to patterns directory"
        },
        "empathy.empathyDir": {
          "type": "string",
          "default": ".empathy",
          "description": "Path to empathy data directory"
        },
        "empathy.pythonPath": {
          "type": "string",
          "default": "python",
          "description": "Path to Python executable"
        },
        "empathy.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show Empathy status in status bar"
        },
        "empathy.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Auto-refresh pattern data"
        },
        "empathy.refreshInterval": {
          "type": "number",
          "default": 300,
          "description": "Refresh interval in seconds"
        },
        "empathy.autoScanOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically run health scan when files are saved"
        },
        "empathy.runHealthScanOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "Run health scan when VS Code opens the workspace (updates health.json)"
        },
        "empathy.healthScanInterval": {
          "type": "number",
          "default": 30,
          "minimum": 0,
          "maximum": 1440,
          "description": "Interval in minutes to auto-regenerate health.json (0 to disable periodic scan)"
        },
        "empathy.scanDebounceMs": {
          "type": "number",
          "default": 2000,
          "description": "Debounce time in milliseconds for auto-scan on save"
        },
        "empathy.memory.apiHost": {
          "type": "string",
          "default": "localhost",
          "description": "(Beta) Memory API host for Redis-backed memory"
        },
        "empathy.memory.apiPort": {
          "type": "number",
          "default": 8765,
          "description": "(Beta) Memory API port for Redis-backed memory"
        },
        "empathy.memory.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "(Beta) Auto-refresh memory status every 30 seconds"
        },
        "empathy.memory.autoRefreshInterval": {
          "type": "number",
          "default": 30,
          "minimum": 5,
          "maximum": 300,
          "description": "(Beta) Auto-refresh interval in seconds"
        },
        "empathy.memory.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "(Beta) Show notifications for memory operations"
        },
        "empathy.testGen.maxFilesToScan": {
          "type": "number",
          "default": 1000,
          "minimum": 10,
          "maximum": 10000,
          "description": "Maximum number of files to scan before stopping (prevents timeouts on large projects)"
        },
        "empathy.testGen.maxFileSizeKb": {
          "type": "number",
          "default": 200,
          "minimum": 10,
          "maximum": 1000,
          "description": "Skip files larger than this size in KB"
        },
        "empathy.testGen.maxCandidates": {
          "type": "number",
          "default": 50,
          "minimum": 5,
          "maximum": 500,
          "description": "Maximum number of candidate files to return from scan"
        },
        "empathy.testGen.maxFilesToAnalyze": {
          "type": "number",
          "default": 20,
          "minimum": 1,
          "maximum": 100,
          "description": "Maximum files to analyze for test generation"
        },
        "empathy.testGen.maxFunctionsPerFile": {
          "type": "number",
          "default": 30,
          "minimum": 1,
          "maximum": 100,
          "description": "Maximum functions to extract per file"
        },
        "empathy.testGen.maxClassesPerFile": {
          "type": "number",
          "default": 15,
          "minimum": 1,
          "maximum": 50,
          "description": "Maximum classes to extract per file"
        },
        "empathy.testGen.maxFilesToGenerate": {
          "type": "number",
          "default": 15,
          "minimum": 1,
          "maximum": 50,
          "description": "Maximum files to generate tests for"
        },
        "empathy.testGen.maxFunctionsToGenerate": {
          "type": "number",
          "default": 8,
          "minimum": 1,
          "maximum": 30,
          "description": "Maximum functions per file to generate tests for"
        },
        "empathy.testGen.maxClassesToGenerate": {
          "type": "number",
          "default": 4,
          "minimum": 1,
          "maximum": 20,
          "description": "Maximum classes per file to generate tests for"
        },
        "empathy.testGen.includeAllFiles": {
          "type": "boolean",
          "default": false,
          "description": "Include files with low priority (tested or small files) in scan results"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.55.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.0"
  }
}

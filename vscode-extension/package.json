{
  "name": "empathy-framework",
  "displayName": "Empathy Framework",
  "description": "AI-powered code health, pattern learning, and cost optimization for VS Code. Learn bug patterns from git history, track API costs, sync to Claude Code.",
  "version": "1.0.0",
  "publisher": "smart-ai-memory",
  "license": "SEE LICENSE IN LICENSE",
  "icon": "images/icon.png",
  "homepage": "https://www.smartaimemory.com",
  "bugs": {
    "url": "https://github.com/Smart-AI-Memory/empathy-framework/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Smart-AI-Memory/empathy-framework"
  },
  "galleryBanner": {
    "color": "#6366f1",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "empathy",
    "ai",
    "patterns",
    "health",
    "cost-optimization"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "empathy.morning",
        "title": "Empathy: Morning Briefing",
        "icon": "$(calendar)"
      },
      {
        "command": "empathy.ship",
        "title": "Empathy: Pre-Ship Check",
        "icon": "$(rocket)"
      },
      {
        "command": "empathy.fixAll",
        "title": "Empathy: Fix All Issues",
        "icon": "$(tools)"
      },
      {
        "command": "empathy.learn",
        "title": "Empathy: Learn Patterns",
        "icon": "$(mortar-board)"
      },
      {
        "command": "empathy.costs",
        "title": "Empathy: View API Costs",
        "icon": "$(graph)"
      },
      {
        "command": "empathy.dashboard",
        "title": "Empathy: Open Dashboard",
        "icon": "$(dashboard)"
      },
      {
        "command": "empathy.syncClaude",
        "title": "Empathy: Sync to Claude Code",
        "icon": "$(sync)"
      },
      {
        "command": "empathy.status",
        "title": "Empathy: Show Status",
        "icon": "$(info)"
      },
      {
        "command": "empathy.refreshHealth",
        "title": "Empathy: Refresh Health",
        "icon": "$(refresh)"
      },
      {
        "command": "empathy.runScan",
        "title": "Empathy: Run Health Scan",
        "icon": "$(search)"
      },
      {
        "command": "empathy.fixLint",
        "title": "Empathy: Fix Lint Issues",
        "icon": "$(lightbulb)"
      },
      {
        "command": "empathy.fixFormat",
        "title": "Empathy: Fix Format Issues",
        "icon": "$(edit)"
      },
      {
        "command": "empathy.runTests",
        "title": "Empathy: Run Tests",
        "icon": "$(beaker)"
      },
      {
        "command": "empathy.viewDetails",
        "title": "View Details",
        "icon": "$(info)"
      },
      {
        "command": "empathy.openFile",
        "title": "Open File",
        "icon": "$(go-to-file)"
      },
      {
        "command": "empathy.ignoreIssue",
        "title": "Ignore Issue",
        "icon": "$(eye-closed)"
      },
      {
        "command": "empathy.openPowerPanel",
        "title": "Empathy: Power Panel",
        "icon": "$(zap)"
      },
      {
        "command": "empathy.memory.showPanel",
        "title": "Empathy: Memory Panel",
        "icon": "$(database)"
      },
      {
        "command": "empathy.memory.startRedis",
        "title": "Empathy: Start Redis",
        "icon": "$(play)"
      },
      {
        "command": "empathy.memory.stopRedis",
        "title": "Empathy: Stop Redis",
        "icon": "$(stop)"
      },
      {
        "command": "empathy.memory.refreshStatus",
        "title": "Empathy: Refresh Memory Status",
        "icon": "$(refresh)"
      },
      {
        "command": "empathy.memory.viewPatterns",
        "title": "Empathy: View Patterns",
        "icon": "$(list-tree)"
      },
      {
        "command": "empathy.memory.exportPatterns",
        "title": "Empathy: Export Patterns",
        "icon": "$(export)"
      },
      {
        "command": "empathy.memory.healthCheck",
        "title": "Empathy: Memory Health Check",
        "icon": "$(heart)"
      }
    ],
    "keybindings": [
      {
        "command": "empathy.openPowerPanel",
        "key": "ctrl+shift+e p",
        "mac": "cmd+shift+e p"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "empathy-explorer",
          "title": "Empathy",
          "icon": "$(pulse)"
        }
      ]
    },
    "views": {
      "empathy-explorer": [
        {
          "type": "webview",
          "id": "empathy-dashboard",
          "name": "Dashboard"
        },
        {
          "type": "webview",
          "id": "empathy-memory",
          "name": "Memory"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "empathy.morning",
          "when": "true"
        },
        {
          "command": "empathy.ship",
          "when": "true"
        },
        {
          "command": "empathy.viewDetails",
          "when": "false"
        },
        {
          "command": "empathy.openFile",
          "when": "false"
        },
        {
          "command": "empathy.ignoreIssue",
          "when": "false"
        }
      ],
      "view/title": [],
      "view/item/context": []
    },
    "configuration": {
      "title": "Empathy Framework",
      "properties": {
        "empathy.patternsDir": {
          "type": "string",
          "default": "./patterns",
          "description": "Path to patterns directory"
        },
        "empathy.empathyDir": {
          "type": "string",
          "default": ".empathy",
          "description": "Path to empathy data directory"
        },
        "empathy.pythonPath": {
          "type": "string",
          "default": "python",
          "description": "Path to Python executable"
        },
        "empathy.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show Empathy status in status bar"
        },
        "empathy.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Auto-refresh pattern data"
        },
        "empathy.refreshInterval": {
          "type": "number",
          "default": 300,
          "description": "Refresh interval in seconds"
        },
        "empathy.autoScanOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically run health scan when files are saved"
        },
        "empathy.scanDebounceMs": {
          "type": "number",
          "default": 2000,
          "description": "Debounce time in milliseconds for auto-scan on save"
        },
        "empathy.memory.apiHost": {
          "type": "string",
          "default": "localhost",
          "description": "Memory API host"
        },
        "empathy.memory.apiPort": {
          "type": "number",
          "default": 8765,
          "description": "Memory API port"
        },
        "empathy.memory.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh memory status"
        },
        "empathy.memory.autoRefreshInterval": {
          "type": "number",
          "default": 30,
          "description": "Auto-refresh interval in seconds",
          "minimum": 5,
          "maximum": 300
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  }
}
